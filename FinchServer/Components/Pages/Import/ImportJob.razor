@page "/import/{jobId}"

@using FinchServer.Beets
@using FinchServer.Components.Modals
@using FinchServer.Database
@using FinchServer.Logging
@using FinchServer.MusicImport
@using Microsoft.EntityFrameworkCore

@inject IDbContextFactory<DataContext> DbContextFactory
@inject IMusicImporter MusicImporter
@inject IWebHostEnvironment Environment
@inject NavigationManager NavigationManager
@inject ILogger Logger

<div class="flex flex-col gap-6 h-[calc(100vh-120px)]">
    <div class="breadcrumbs text-sm">
        <ul>
            <li class="font-semibold"><NavLink href="/import">Import music</NavLink></li>
            <li>Job @JobId</li>
        </ul>
    </div>
    
    @if (_importJob != null) {
        <div class="flex items-center justify-between">
            <div class="text-2xl font-semibold flex items-center gap-2">
                @if (_isImportProcessActive) {
                    <span class="loading loading-spinner loading-xl"></span>
                }
                
                Job #@_importJob.Id
            </div>
            
            <div class="flex items-center gap-2">
                @if (_isImportingFiles) {
                    <button class="btn btn-error btn-soft" @onclick="CancelImport">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                        </svg>

                        Cancel import
                    </button>
                } else {
                    <button class="btn btn-error btn-soft" @onclick="DeleteJob" disabled="@_importJob.IsCompleted">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"/>
                        </svg>

                        Delete job
                    </button>

                    <button class="btn btn-primary" @onclick="() => _isConfiguringSettings = true" disabled="@_importJob.IsCompleted">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m9 12.75 3 3m0 0 3-3m-3 3v-7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
                        </svg>

                        Start import
                    </button>
                }
            </div>
        </div>

        @if (_isImportingFiles) {
            <Xterm Class="h-full" @ref="_terminal" Options="_terminalOptions" Addons="_terminalAddons" OnKey="HandleTerminalKey" OnFirstRender="OnFirstTerminalRender" />
        } else {
            <table class="table table-zebra">
                <thead>
                <tr>
                    <th></th>
                    <th>File</th>
                    <th>Status</th>
                    <th>Remarks</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var file in _importJob.Files.OrderBy(f => f.Filename)) {
                    <tr>
                        <td class="w-12">
                            @if (file.IsSuccess) {
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 text-success">
                                    <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12Zm13.36-1.814a.75.75 0 1 0-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 0 0-1.06 1.06l2.25 2.25a.75.75 0 0 0 1.14-.094l3.75-5.25Z" clip-rule="evenodd"/>
                                </svg>
                            }
                            else {
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 text-error">
                                    <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25Zm-1.72 6.97a.75.75 0 1 0-1.06 1.06L10.94 12l-1.72 1.72a.75.75 0 1 0 1.06 1.06L12 13.06l1.72 1.72a.75.75 0 1 0 1.06-1.06L13.06 12l1.72-1.72a.75.75 0 1 0-1.06-1.06L12 10.94l-1.72-1.72Z" clip-rule="evenodd"/>
                                </svg>
                            }
                        </td>
                        <td>@file.Filename</td>
                        <td>
                            @if (file.IsSuccess) {
                                <span>Ready for import</span>
                            } else {
                                <span>Failed</span>
                            }
                        </td>
                        <td>
                            @if (file.ErrorMessage != null) {
                                <span>@file.ErrorMessage</span>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
    }
</div>

<ImportSettingsDialog @bind-IsVisible="_isConfiguringSettings" ImportConfiguration="_importConfiguration" IsImportConfirmed="Import"></ImportSettingsDialog>

@code {
    
    // - Properties
    
    [Parameter, EditorRequired]
    public required string JobId { get; set; }
    

    // - Private Properties

    private Database.ImportJob? _importJob;
    private ImportConfiguration _importConfiguration = ImportConfiguration.Album;
    private bool _isConfiguringSettings;
    private bool _isImportingFiles;
    private bool _isImportProcessActive;
    private InteractiveCommand? _importCommand;
    private readonly HashSet<string> _terminalAddons = ["addon-fit"];
    private readonly SemaphoreSlim _terminalLock = new(1, 1);

    private Xterm? _terminal;
    private readonly TerminalOptions _terminalOptions = new() {
        CursorBlink = true,
        CursorStyle = CursorStyle.Bar
    };
    
    
    // - Functions

    protected override async Task OnInitializedAsync() {
        if (!RendererInfo.IsInteractive) return;

        var context = await DbContextFactory.CreateDbContextAsync();
        _importJob = await context.ImportJobs.Where(j => j.Id == JobId).Include(j => j.Files).FirstOrDefaultAsync();
    }


    // - Private Functions
    
    private async Task Import() {
        if (_importJob == null) return;
        
        _isImportingFiles = true;
        _isImportProcessActive = true;
        await InvokeAsync(StateHasChanged);
        await Task.Delay(500);
        
        if (_terminal == null) return;
        
        await _terminal.Focus();
        await _terminal.WriteLine($"Starting import for job {_importJob.Id}...");

        try {
            _importCommand = MusicImporter.Import(_importJob, _importConfiguration);
            await _terminal.WriteLine(_importCommand.Command);
            
            _importCommand.OutputReceived += async (_, s) => {
                await InvokeAsync(async () => {
                    await _terminalLock.WaitAsync();
                    try {
                        await _terminal.WriteLine(s);
                    } catch (Exception ex) {
                        Logger.Error($"Error writing to terminal, {ex}", LogCategory.Importer, consoleLog: true);
                    } finally {
                        _terminalLock.Release();
                    }
                });
            };

            _importCommand.ProcessExited += async (_, code) => {
                await _terminal.WriteLine($"Process exited with code {code}");
                _isImportProcessActive = false;
                await InvokeAsync(StateHasChanged);
            };
        } catch (Exception e) {
            Logger.Error($"Error importing files, {e}", LogCategory.Importer, consoleLog: true);
        }
    }

    private async Task CancelImport() {
        if (_terminal == null) return;

        await _terminal.DisposeAsync();
        _isImportProcessActive = false;
        _isImportingFiles = false;
        await InvokeAsync(StateHasChanged);
    }

    private async Task DeleteJob() {
        if (_importJob == null) return;

        var context = await DbContextFactory.CreateDbContextAsync();
        var job = await context.ImportJobs.FirstOrDefaultAsync(j => j.Id == _importJob.Id);
        if (job != null) {
            context.ImportJobs.Remove(job);
            await context.SaveChangesAsync();
        }
        
        var jobPath = Path.Combine(Environment.ContentRootPath, "Temp", "Import", JobId);
        try {
            if (Directory.Exists(jobPath)) {
                Directory.Delete(jobPath, recursive: true);
            }
        } catch (Exception e) {
            Logger.Error($"Error deleting job directory, {e}", LogCategory.Importer, consoleLog: true);
        }
        
        NavigationManager.NavigateTo("/import");
    }

    private async Task OnFirstTerminalRender() {
        if (_terminal == null) return;

        await _terminal.Addon("addon-fit").InvokeVoidAsync("fit");
    }
    
    private async Task HandleTerminalKey(KeyEventArgs args) {
        if (_importCommand == null) return;

        await _importCommand.SendInputAsync(args.Key);
    }
}
