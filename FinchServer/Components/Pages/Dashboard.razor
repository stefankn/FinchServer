@page "/"
@using FinchServer.Beets
@using FinchServer.Components.Modals
@using FinchServer.Controllers.Utilities
@using Microsoft.EntityFrameworkCore

@inject IDbContextFactory<BeetsContext> DbContextFactory

<div class="flex flex-col gap-6">
    <div class="breadcrumbs text-sm">
        <ul>
            <li>Dashboard</li>
        </ul>
    </div>
    
    <div class="text-xl font-semibold">
        Items to verify
    </div>
    
    <table class="table table-zebra">
        <thead>
        <tr>
            <th>Artist</th>
            <th>Title</th>
            <th>Album type</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @if (_itemsToVerify.Length > 0) {
            foreach (var item in _itemsToVerify) {
                <tr>
                    <td>@item.Artist</td>
                    <td>@item.Title</td>
                    <td class="text-error">@item.AlbumType</td>
                    <td class="text-right">
                        <button class="btn btn-sm btn-square" @onclick="() => _editingItem = item">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125"/>
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        } else {
            <tr>
                <td colspan="3">No items need verification</td>
            </tr>
        }
        </tbody>
    </table>
    
    <EditItemModal @bind-Item="_editingItem" OnItemUpdate="Update"></EditItemModal>
</div>

@code {

    private Item[] _itemsToVerify = [];
    private Item? _editingItem;

    protected override async Task OnInitializedAsync() {
        if (!RendererInfo.IsInteractive) return;

        await Update();
    }

    private async Task Update() {
        var context = await DbContextFactory.CreateDbContextAsync();
        _itemsToVerify = await context.Items
            .Where(i => i.AlbumId == null && i.AlbumType != "" && i.AlbumType != "dj-mix")
            .ToArrayAsync();

        await InvokeAsync(StateHasChanged);
    }
}
